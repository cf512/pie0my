{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "lib": ["es2018", "dom"],
    "moduleResolution": "node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "declaration": true,
  },
  "include": ["routes/**/*"],
  "exclude": [
    "node_modules"
  ]
}